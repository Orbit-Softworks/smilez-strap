<Window x:Class="SmilezStrap.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmilezStrap" Height="200" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">

    <Border Background="Transparent" Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        <Border Background="#1E1E1E" CornerRadius="12" BorderThickness="1" BorderBrush="#2A2A2A">
            <Grid Margin="25,20,25,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header / Title Bar (only this is draggable) -->
                <Grid Grid.Row="0" Margin="0,0,0,20" Background="Transparent"
                      MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#FF2B2B" Width="32" Height="32" CornerRadius="8">
                            <TextBlock Text="S" FontSize="16" FontWeight="Bold" Foreground="White"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="SmilezStrap" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock x:Name="SubtitleText" Text="Launching Roblox"
                                       Foreground="#BBBBBB" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Status and Progress -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <Grid Margin="0,0,0,12">
                        <TextBlock x:Name="StatusText" Text="Initializing..." Foreground="White" FontSize="13"/>
                        <TextBlock x:Name="PercentText" Text="0%" Foreground="#AAAAAA" FontSize="12"
                                 HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                    <Border Background="#2A2A2A" Height="8" CornerRadius="4">
                        <Grid>
                            <Rectangle x:Name="ProgressBarFill" Fill="#FF2B2B" Height="8"
                                     HorizontalAlignment="Left" Width="0" RadiusX="4" RadiusY="4"/>
                        </Grid>
                    </Border>
                    <TextBlock x:Name="DetailText" Text="" Foreground="#888888" FontSize="10"
                             TextWrapping="Wrap" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button x:Name="CancelButton" Content="Cancel" Width="70" Height="28"
                          Background="#2A2A2A" Foreground="#999" BorderThickness="0"
                          FontSize="11" Cursor="Hand" Click="CancelButton_Click" Visibility="Visible">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#353535"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="CloseButton" Content="Close" Width="70" Height="28"
                          Background="#FF2B2B" Foreground="White" BorderThickness="0"
                          FontSize="11" FontWeight="Medium" Cursor="Hand"
                          Click="CloseButton_Click" Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF4444"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>

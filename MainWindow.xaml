<Window x:Class="SmilezStrap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmilezStrap" Height="500" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Menu Button Style -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#FF4444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Action Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A00000"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6B0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Settings Button Style -->
        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A00000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="Transparent" Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="#8B0000" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>

        <Border Background="#0A0A0A" CornerRadius="8" BorderThickness="1" BorderBrush="#8B0000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Sidebar -->
                <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8,0,0,8" BorderThickness="0,0,1,0" BorderBrush="#333333">
                    <Grid>
                        <!-- Title Bar (Left Part) -->
                        <Grid Height="40" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal" Margin="15,0" VerticalAlignment="Center">
                                <TextBlock Text="SmilezStrap" Foreground="#FF4444" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <!-- Menu Items -->
                        <StackPanel Margin="0,50,0,0">
                            <Button Style="{StaticResource MenuButton}" Background="#2A2A2A" Foreground="#FF4444" x:Name="HomeButton" Click="HomeButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ " FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock Text="Home"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MenuButton}" x:Name="SettingsButton" Click="SettingsButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âš™" FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock Text="Settings"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MenuButton}" Click="About_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â„¹" FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock Text="About"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Bottom Links -->
                        <StackPanel VerticalAlignment="Bottom" Margin="15,0,15,15">
                            <Border Height="1" Background="#333333" Margin="0,0,0,10"/>
                            <Button Style="{StaticResource MenuButton}" Click="Discord_Click" Padding="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ’¬" FontSize="12" Margin="0,0,8,0"/>
                                    <TextBlock Text="Discord" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <TextBlock x:Name="VersionText" Text="v1.0.0" Foreground="#666" FontSize="10" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right Content Area -->
                <Grid Grid.Column="1">
                    <!-- Title Bar (Right Part) -->
                    <Grid Height="40" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                            <Button Content="â”€" Width="40" Height="40" Background="Transparent" BorderThickness="0"
                                    Foreground="#999" FontSize="13" Click="MinimizeButton_Click" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2A2A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="âœ•" Width="40" Height="40" Background="Transparent" BorderThickness="0"
                                    Foreground="#999" FontSize="13" Click="CloseButton_Click" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8B0000"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Main Content - Home View (Initially Visible) -->
                    <StackPanel x:Name="HomeView" Margin="40,60,40,40" VerticalAlignment="Center">
                        <!-- Header -->
                        <TextBlock Text="Welcome to SmilezStrap" FontSize="24" FontWeight="SemiBold" 
                                 Foreground="#FF4444" Margin="0,0,0,8"/>
                        <TextBlock Text="Launch Roblox or Roblox Studio to get started" FontSize="13" 
                                 Foreground="#999" Margin="0,0,0,30"/>

                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Launch Roblox -->
                            <Button Grid.Column="0" Height="100" Style="{StaticResource PrimaryButton}" 
                                  Click="LaunchRoblox_Click">
                                <StackPanel>
                                    <TextBlock Text="ðŸŽ®" FontSize="28" Foreground="White" 
                                             HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Launch Roblox" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="White" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Launch Studio -->
                            <Button Grid.Column="2" Height="100" Style="{StaticResource SecondaryButton}" 
                                  Click="LaunchStudio_Click">
                                <StackPanel>
                                    <TextBlock Text="ðŸ› ï¸" FontSize="28" 
                                             HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Launch Studio" FontSize="14" 
                                             Foreground="White" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Info Section -->
                        <Border Background="#1A1A1A" CornerRadius="6" Padding="15" Margin="0,25,0,0" BorderThickness="1" BorderBrush="#333333">
                            <StackPanel>
                                <TextBlock Text="â„¹ Quick Info" FontSize="12" FontWeight="SemiBold" 
                                         Foreground="#FF4444" Margin="0,0,0,8"/>
                                <TextBlock Text="SmilezStrap automatically manages your Roblox installation and keeps it up to date." 
                                         FontSize="11" Foreground="#AAA" TextWrapping="Wrap"/>
                                <TextBlock Text="Settings can be configured in the Settings tab." 
                                         FontSize="11" Foreground="#888" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Settings View (Initially Collapsed) -->
                    <Grid x:Name="SettingsView" Margin="40,60,40,40" VerticalAlignment="Center" Visibility="Collapsed">
                        <StackPanel>
                            <!-- Settings Title -->
                            <TextBlock Text="âš™ï¸ Settings" FontSize="20" FontWeight="SemiBold" 
                                     Foreground="#FF4444" Margin="0,0,0,20"/>
                            
                            <!-- FPS Limiter -->
                            <Border Background="#1A1A1A" CornerRadius="6" Padding="15" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#333333">
                                <StackPanel>
                                    <TextBlock Text="FPS Limiter" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="White" Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- FIXED: TextBox wrapped in Border for rounded corners -->
                                        <Border Grid.Column="0" Background="#2A2A2A" CornerRadius="4" 
                                                BorderThickness="1" BorderBrush="#444444">
                                            <TextBox x:Name="FpsLimitTextBox" 
                                                     Height="35" Background="Transparent" 
                                                     Foreground="White" 
                                                     BorderThickness="0"
                                                     FontSize="14" Padding="10,0"
                                                     Text="60" VerticalContentAlignment="Center"/>
                                        </Border>
                                        
                                        <Button x:Name="SetFpsButton" Grid.Column="1" 
                                                Content="Apply" Width="80" Height="35" 
                                                Margin="10,0,0,0" Style="{StaticResource SettingsButton}"
                                                Click="SetFpsButton_Click" Cursor="Hand"/>
                                    </Grid>
                                    
                                    <TextBlock Text="Set FPS limit for Roblox games (1-999)" 
                                               Foreground="#888" FontSize="11" 
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Updates Section -->
                            <Border Background="#1A1A1A" CornerRadius="6" Padding="15" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#333333">
                                <StackPanel>
                                    <TextBlock Text="Updates" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="White" Margin="0,0,0,10"/>
                                    
                                    <Button x:Name="CheckUpdatesButton" 
                                            Content="Check for Updates" 
                                            Height="35" 
                                            Style="{StaticResource SettingsButton}"
                                            Click="CheckUpdatesButton_Click" Cursor="Hand"/>
                                    
                                    <TextBlock Text="Check for the latest version of SmilezStrap" 
                                               Foreground="#888" FontSize="11" 
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Info Section -->
                            <Border Background="#1A1A1A" CornerRadius="6" Padding="15" BorderThickness="1" BorderBrush="#333333">
                                <StackPanel>
                                    <TextBlock Text="Information" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="White" Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="â€¢ FPS limit is automatically applied when launching Roblox" 
                                               Foreground="#CCC" FontSize="12" Margin="0,0,0,5"/>
                                    <TextBlock Text="â€¢ Desktop shortcuts are automatically managed" 
                                               Foreground="#CCC" FontSize="12" Margin="0,0,0,5"/>
                                    <TextBlock Text="â€¢ Check for updates regularly for new features" 
                                               Foreground="#CCC" FontSize="12"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Settings Info -->
                            <TextBlock Text="Settings are saved automatically when changed" 
                                       Foreground="#666" FontSize="10" 
                                       Margin="0,15,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>

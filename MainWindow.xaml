<Window x:Class="SmilezStrap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmilezStrap" Height="380" Width="550"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="16,10">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#303030"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#E91E63"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F06292"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="Transparent" Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Border Background="#1A1A1A" CornerRadius="10" BorderThickness="1" BorderBrush="#2A2A2A">
            <Grid>
                <!-- Title Bar -->
                <Grid Height="40" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" Margin="12,0" VerticalAlignment="Center">
                        <Border Background="#E91E63" Width="24" Height="24" CornerRadius="5">
                            <TextBlock Text="S" FontSize="13" FontWeight="Bold" Foreground="White" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="SmilezStrap" Foreground="#E0E0E0" FontSize="13" FontWeight="Medium"
                                 VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,2,0">
                        <Button Content="â”€" Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                Foreground="#888" FontSize="13" Click="MinimizeButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#252525"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âœ•" Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                Foreground="#888" FontSize="13" Click="CloseButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E91E63"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Content -->
                <StackPanel Margin="25,55,25,25" VerticalAlignment="Center">
                    <TextBlock Text="Quick Launch" FontSize="22" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
                    <TextBlock Text="Select an action to get started" FontSize="12" Foreground="#777" Margin="0,0,0,20"/>

                    <!-- Launch Roblox -->
                    <Button Height="50" Style="{StaticResource PrimaryButton}" Click="LaunchRoblox_Click" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="â–¶" FontSize="16" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Launch Roblox" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Start playing games" FontSize="10" Foreground="#FFDDEE" Margin="0,1,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- Launch Studio -->
                    <Button Height="50" Style="{StaticResource ActionButton}" Click="LaunchStudio_Click" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”§" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Launch Roblox Studio" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Create and develop experiences" FontSize="10" Foreground="#777" Margin="0,1,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- Settings -->
                    <Button Height="50" Style="{StaticResource ActionButton}" Click="Settings_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="âš™" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Settings" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Configure preferences" FontSize="10" Foreground="#777" Margin="0,1,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- Footer -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="About" Background="Transparent" BorderThickness="0" Foreground="#555" 
                              FontSize="10" Cursor="Hand" Padding="6,3" Click="About_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#888"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="â€¢" Foreground="#333" Margin="6,0" VerticalAlignment="Center" FontSize="10"/>
                        <Button Content="Discord" Background="Transparent" BorderThickness="0" Foreground="#555" 
                              FontSize="10" Cursor="Hand" Padding="6,3" Click="Discord_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#888"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>

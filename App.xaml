<Application x:Class="SmilezStrap.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Black/Red Theme -->
        <SolidColorBrush x:Key="PrimaryRed" Color="#8B0000"/>
        <SolidColorBrush x:Key="LightRed" Color="#A00000"/>
        <SolidColorBrush x:Key="DarkRed" Color="#6B0000"/>
        <SolidColorBrush x:Key="AccentRed" Color="#FF4444"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="BackgroundMedium" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TextWhite" Color="White"/>
        <SolidColorBrush x:Key="TextGray" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="TextDarkGray" Color="#666666"/>
        <SolidColorBrush x:Key="BorderGray" Color="#333333"/>
        
        <!-- Button Base Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundLight}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundMedium}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
        </Style>

        <!-- TextBlock Base Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
        </Style>

        <!-- ScrollViewer Style -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Application.Resources>
</Application>

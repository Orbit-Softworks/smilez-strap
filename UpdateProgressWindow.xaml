<Window x:Class="SmilezStrap.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updating SmilezStrap" Height="300" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Topmost="True">
    
    <Border Background="Transparent" Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="#8B0000" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>

        <Border Background="#0A0A0A" CornerRadius="8" BorderThickness="1" BorderBrush="#8B0000">
            <Grid Margin="30">
                <StackPanel VerticalAlignment="Center">
                    <!-- Title -->
                    <TextBlock Text="ðŸ”„ Updating SmilezStrap" 
                             FontSize="20" 
                             FontWeight="SemiBold" 
                             Foreground="#FF4444" 
                             HorizontalAlignment="Center"
                             Margin="0,0,0,30"/>
                    
                    <!-- Status Text -->
                    <TextBlock x:Name="StatusText" 
                             Text="Preparing update..." 
                             FontSize="13" 
                             Foreground="#CCC" 
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             TextAlignment="Center"
                             Margin="0,0,0,20"/>
                    
                    <!-- Progress Bar -->
                    <Border Height="8" 
                            Background="#1A1A1A" 
                            CornerRadius="4"
                            Margin="0,0,0,15">
                        <Border x:Name="ProgressBarFill"
                                HorizontalAlignment="Left"
                                CornerRadius="4"
                                Width="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#8B0000" Offset="0"/>
                                    <GradientStop Color="#FF4444" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Border>
                    
                    <!-- Progress Percentage -->
                    <TextBlock x:Name="ProgressText" 
                             Text="0%" 
                             FontSize="11" 
                             Foreground="#888" 
                             HorizontalAlignment="Center"/>
                    
                    <!-- Details Text -->
                    <TextBlock x:Name="DetailsText" 
                             Text="" 
                             FontSize="10" 
                             Foreground="#666" 
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"
                             TextWrapping="Wrap"
                             TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
